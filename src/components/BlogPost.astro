---
interface Props {
    description: string;
    title: string;
    url: string;
}
const { description, title, url } = Astro.props;
---

<li class="p-2 w-xs border-3 border-black rounded">
    <a href={url} class="flex flex-col gap-1">
        <div class="text-2xl">{title}</div>
        <p class="line-clamp-2">
            {description}
        </p>
    </a>
</li>
